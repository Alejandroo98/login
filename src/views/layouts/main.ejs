          <% if (signupMessage.length > 0){ %>
            <div class="alert alert-danger" role="alert">
                    <%= signupMessage %>
                </div>
                <% } %>
            
                <% if (signinMessage.length > 0){ %>
                <div class="alert alert-danger" role="alert">
                        <%= signinMessage %>
                    </div>
                    <% } %>
                    
